<div class="container">
  <div class="row">
    <h1>Articles</h1>
  </div>
  <div class="row">
    <h4><%= link_to "Create new article", new_article_path %></h4>
  </div>
  <div class="row">
    <ul class="list-unstyled">
      <% @articles.each do |article| %>
        <li>
          <h3><%= link_to article.title, article_path(article) %></h3>
          <p><%= article.content.first(100) %></p>
        </li>
      <% end %>
    </ul>
  </div>
</div>
